@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        .form{
            background-color:white;
        }
        h2 {
            text-align: center;
        }

        .container {
            background-color: white;
            padding-bottom: 30px;
        }
        .message{
            text-align:start;
            width:200px;
            height:50px;

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form">
            <h2>New Post</h2>
            <form method="post" action="@Url.Action("NewPost", "Forum")">
                Username: <input type="text" name="username" /><br />
                Subject: <input type="text" name="subject" /><br />
                Message: <textarea class="message" type="text" name="message" > </textarea> <br />
                <button type="submit" name="submit">Submit!</button>

            </form>
        </div>
    </div>
</body>
</html>