@model SSGeek.Models.AlienWeightModel
  @{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
  }
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />

        <style>
            h1{
                text-align:center;
            }
            .container {
                background-color: white;
                padding-bottom: 30px;
            }

        </style>

        <title></title>
    </head>
    <body>
        <div class="container">
            <h1>Alien Weight Calculator</h1>
            <form method="get" action=@Url.Action("AlienWeightResult", "Calculators")>

                Choose a Planet:
                <select name="Planet">
                    <option value="Mercury">Mercury</option>
                    <option value="Venus">Venus  </option>
                    <option value="Mars">Mars   </option>
                    <option value="Jupiter">Jupiter</option>
                    <option value="Saturn">Saturn </option>
                    <option value="Uranus">Uranus </option>
                    <option value="Neptune">Neptune</option>
                    <option value="Pluto">Pluto  </option>
                </select>

                Enter your Earth weight: <input value="EarthWeight" type="number" name="EarthWeight" /><br />

                <button type="submit" value="Calculate Weight">Calculate Weight</button>

            </form>
        </div>
    </body>
</html>